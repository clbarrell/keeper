{
  "name": "Keeper",
  "version": "0.1.0",
  "description": "Keep an eye on your tab activity",
  "manifest_version": 2,
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "title": "Tab Thief"
  },
  "web_accessible_resources": [
    "scripts/moodModal.html",
    "scripts/moodModal.css",
    "scripts/moodModal.js",
    "logos/logo125.png"
  ],
  "icons": {
    "125": "logos/logo125.png",
    "250": "logos/logo250.png",
    "375": "logos/logo375.png"
  },
  "permissions": ["storage", "activeTab", "notifications", "tabs"]
}
